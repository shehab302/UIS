                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Department", new { page = ViewBag.CurrentPage + 1 })">التالي</a>
            </li>
        </ul>
