@{
    ViewData["Title"] = "Student Courses";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="text-center fw-bold">مواد الطالب</h1>
        </div>
    </div>

    <!-- Table Section -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th style="width: 15%;">الاسم</th>
                    <th style="width: 10%;">عدد الساعات</th>
                    <th style="width: 10%;">الدرجة</th>
                    <th style="width: 15%;">الوثيقة</th>
                    <th style="width: 15%;">مستوي المادة</th>
                    <th style="width: 20%;">اسم الدكتور</th>
                    <th style="width: 25%;">الاجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Course.Name</td>
                        <td>@item.Course.Hours</td>
                        <td>@item.Course.Degree</td>
                        <td>
                            <a href="~/CourseDocument/@item.Course.DocumentUrl" target="_blank" class="btn btn-link text-decoration-none">
                                <i class="bi bi-file-earmark"></i> Document
                            </a>
                        </td>
                        <td>@item.Course.CourseLevel</td>
                        <td>@item.Course.Member.FName @item.Course.Member.MName @item.Course.Member.LName</td>
                        <td>
                            <a href="/Admin/StudentCourse/Degrees?studentId=@item.StudentId&courseId=@item.CourseId"
                               class="btn btn-primary btn-sm mb-2">
                                <i class="bi bi-bar-chart"></i> Degrees
                            </a>
                            <a href="/Customer/StudentAssignment/CourseAssignments?courseId=@item.CourseId&studentId=@item.StudentId"
                               class="btn btn-primary btn-sm mb-2">
                                <i class="bi bi-file-earmark-text"></i> Assignments
                            </a>
                            <a href="/Customer/Lectures/StudentLectures?CourseId=@item.CourseId"
                               class="btn btn-primary btn-sm mb-2">
                                <i class="bi bi-journal-text"></i> Lectures
                            </a>
                            <a href="/Customer/Sections/StudentSections?CourseId=@item.CourseId"
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-list-ul"></i> Sections
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back Button Section -->
    <div class="mt-4 ">
        <a href="/Admin/StudentCourse/Index?StudentId=@ViewBag.studentId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
