@model Models.StudentAssignment

@{
    ViewData["Title"] = "Add Student Assignment";
}

<h1>Add</h1>

<h4>Student Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="AssignmentId" id="AssignmentId" value="@ViewBag.assignmentId" />
            <input type="hidden" name="StudentId" id="StudentId" value="@ViewBag.studentId" />
            <input type="hidden" name="courseId" id="courseId" value="@ViewBag.courseId" />
            
            <div class="form-group">
                <label asp-for="DocumentUrl" class="control-label"></label>
                <input type="file" accept=".pdf,application/pdf" asp-for="DocumentUrl" class="form-control" />
                <span asp-validation-for="DocumentUrl" class="text-danger"></span>
            </div>
            <div class="form-group"> <br />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="CourseAssignments" asp-route-courseId="@ViewBag.courseId" asp-route-studentId="@ViewBag.studentId">Back to List</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
