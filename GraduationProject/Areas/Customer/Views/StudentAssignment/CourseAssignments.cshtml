@{
    ViewData["Title"] = "Assignments";
}

@model List<Assignment>


<div class="row mb-3">
    <div class="col-9">
        <h1 style="font-size: 2.5em; font-weight: bold;">Assignments</h1>
    </div>
    <div class="col-3">
        <a href="/Customer/StudentAssignment/Index?studentId=@ViewBag.studentId&courseId=@ViewBag.courseId" class="btn btn-danger">Your Assignments</a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 10%;" scope="col">Name</th>
            <th style="width: 10%;" scope="col">Document</th>
            <th style="width: 40%;" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-light">
                <td>@item.Name</td>
                <td><a href="~/CourseAssignment/@item.DocumentUrl" target="_blank">Document</a></td>
                <td>
                    <a href="/Customer/StudentAssignment/Create?assignmentId=@item.AssignmentId&studentId=@ViewBag.studentId&courseId=@ViewBag.courseId" class="btn btn-dark" style="margin-left: 10px;">Add Assignment</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="mt-4">
    <a href="/Admin/StudentCourse/Index2?studentId=@ViewBag.studentId&level=@ViewBag.level" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
