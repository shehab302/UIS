<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Facuilty System</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Space+Grotesk:wght@300..700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/HomeLayout.css" />
    
</head>

<body>


    <!-- Navbar Start Makhlouf -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-body-tertiary py-0">
            <a asp-action="Index" asp-area="Customer" asp-controller="Home" class="navbar-brand ml-lg-3">
                <h1 class="m-0 fs-4">
                    <img src="~/Img/national_university_logo_2.png" alt="Alternate Text" />
                    <span class="me-3 logo-text">
                        جامعة اسيوط الاهلية
                    </span>
                </h1>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between ps-3" id="navbarCollapse">
                <div class="navbar-nav mx-auto py-0">
                    @* <a asp-action="Index" asp-area="Customer" asp-controller="Home" class="nav-item nav-link">Home</a> *@
                    <a asp-action="About" asp-area="Customer" asp-controller="Home" class="nav-item nav-link fs-6">معلومات عنا</a>
                    @* <a asp-action="Contact" asp-area="Customer" asp-controller="Home" class="nav-item nav-link fs-6 me-5">تواصل معنا</a> *@
                    <a href="https://wa.me/201220064952?text=اريد%20مساعدة%20في%3A%0A" target="_blank" class="nav-item nav-link fs-6 me-5">تواصل معنا</a>
                </div>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn d-none d-lg-block" style="background-color: #2b6cac; color: #fff;">تسجيل الدخول</a>
            </div>
        </nav>
    </div>
  
    <div class="main-content">
        <main>
            @RenderBody()
        </main>
    </div>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
